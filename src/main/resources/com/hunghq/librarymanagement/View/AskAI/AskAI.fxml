<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hunghq.librarymanagement.Controller.AskAIController">

    <!-- TextField để nhập câu hỏi -->
    <TextField fx:id="questionInput" layoutX="20.0" layoutY="20.0" prefHeight="25.0" prefWidth="688.0" promptText="Enter your question here..." />

    <!-- Button để gửi câu hỏi -->
    <Button layoutX="721.0" layoutY="20.0" onAction="#handleSend" prefWidth="100.0" style="-fx-background-color: #04558A;" text="Send" textFill="WHITE" />

    <!-- TextArea để hiển thị phản hồi -->
    <TextArea fx:id="responseArea" editable="false" layoutX="20.0" layoutY="70.0" prefHeight="460.0" prefWidth="801.0" promptText="AI response will appear here..." wrapText="true" />

</AnchorPane>
