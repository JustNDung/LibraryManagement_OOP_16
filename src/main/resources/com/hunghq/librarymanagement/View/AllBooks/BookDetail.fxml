        <TextField fx:id="isbnField" editable="false" layoutX="124.0" layoutY="433.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

        <!-- Published Date -->
        <Label layoutX="14.0" layoutY="478.0" text="Published Date:" textFill="#000022">
