            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="publishedDateField" editable="false" layoutX="124.0" layoutY="472.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

        <!-- Award -->
        <Label layoutX="14.0" layoutY="516.0" text="Award:" textFill="#000022">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="awardField" editable="false" layoutX="124.0" layoutY="510.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

      <ImageView fx:id="coverImageView" fitHeight="183.0" fitWidth="143.0" layoutX="349.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" style="-fx-smooth: true;" />

      <Label fx:id="id" layoutX="14.0" layoutY="201.0" text="ID:" textFill="#000022">
         <font>
            <Font size="14.0" />
         </font></Label>
      <TextField fx:id="idField" editable="false" layoutX="124.0" layoutY="195.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

    </children>
</AnchorPane>
