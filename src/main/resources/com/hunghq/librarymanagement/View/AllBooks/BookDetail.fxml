        <TextField fx:id="titleField" editable="false" layoutX="124.0" layoutY="235.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

        <!-- Author Name -->
        <Label layoutX="14.0" layoutY="281.0" text="Author:" textFill="#000022">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="authorField" editable="false" layoutX="124.0" layoutY="275.0" prefWidth="700" style="-fx-border-color: #7DABD0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" />

